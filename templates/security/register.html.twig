{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

    <div class="container-fluid mt-5">
        <div class="d-flex justify-content-center">
            <div class="card p-2">
                <div class="card-body" style="width:450px">
                    <h2 class="text-center" style="font-size: 1.5em">Create your account</h2>

                    {{ form_start(registrationForm) }}

                    <div class="my-3">

                        {{ form_row(registrationForm.email) }}

                    </div>
                    <div class="my-3">

                        {{ form_row(registrationForm.plainPassword, {
                            label: 'Password'
                        }) }}

                    </div>
                    <div class="my-5">

                        {{ form_row(registrationForm.agreeTerms) }}

                    </div>
                    <button class="btn btn-success mb-4" type="submit" style="width: 100%">Create account
                    </button>
                    <a href="{{ path('app_login') }}" class="btn btn-outline-light" style="width: 100%">Sign
                        in</a>

                    {{ form_end(registrationForm) }}

                    <a href="{{ path('app_home') }}" class="d-flex justify-content-center mt-5"><i
                                class="bi bi-arrow-return-left"></i></a>

                </div>
            </div>
        </div>
    </div>

{% endblock %}
