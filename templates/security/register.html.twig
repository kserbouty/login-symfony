{% extends 'shared/base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

    <div class="container-fluid mt-5">
        <div class="d-flex justify-content-center">
            <div class="card p-2">
                <div class="card-body" style="width:450px">
                    <h2 class="text-center" style="font-size: 1.5em">Create your account</h2>

                    {{ form_start(registrationForm) }}

                    <div class="my-3">

                        {{ form_row(registrationForm.email) }}

                    </div>
                    <div class="my-3">

                        {{ form_row(registrationForm.plainPassword, {
                            label: 'Password'
                        }) }}

                    </div>
                    <div class="my-5">

                        <div class="d-flex flex-row" style="height: 24px">
                            {{ form_row(registrationForm.agreeTerms, { 'label': ' ' }) }}
                            <p class="mx-1">Agree on terms</p>
                        </div>

                    </div>
                    <button class="btn btn-success mb-4" type="submit" style="width: 100%">Create account
                    </button>
                    <a href="{{ path('login') }}" class="btn btn-outline-light" style="width: 100%">Sign
                        in</a>

                    {{ form_end(registrationForm) }}

                </div>
            </div>
        </div>
    </div>

{% endblock %}
