{% extends 'shared/base.html.twig' %}

{% block title %}Another Devboard | Dashboard{% endblock %}

{% block body %}

    {% include 'shared/nav.html.twig' %}

    <main class="container">

        <article id="workspace-btn">
            <a class="btn" data-bs-toggle="modal"
               data-bs-target="#add-workspace">
                <i class="bi bi-plus-lg"></i>
                <span>New workspace</span>
            </a>
        </article>

        {% for workspace in workspaces %}

            <article id="workspace" class="mx-5 workspaces">
                <div class="d-flex flex-column">
                    <strong class="col">{{ workspace.name }}</strong>
                    <em class="col">{{ workspace.description }}</em>
                </div>
            </article>

        {% endfor %}

    </main>
    <div class="container-fluid text-dark">
        <div id="add-workspace" aria-labelledby="label-workspace" class="modal fade" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">

                    {{ form_start(workspaceForm, {'action': path('workspace_add'), 'method': 'POST'}) }}

                    <div class="modal-header">
                        <h5 id="label-workspace " class="modal-title">Create workspace</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="mb-3">

                            {{ form_row(workspaceForm.name) }}

                        </div>
                        <div class="mb-3">

                            {{ form_row(workspaceForm.description) }}

                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button id="workspace-btn-modal" name="add-workspace" type="submit" class="btn btn-primary">Add
                            workspace
                        </button>
                    </div>

                    {{ form_end(workspaceForm) }}

                </div>
            </div>
        </div>
    </div>

{% endblock %}